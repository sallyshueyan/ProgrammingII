BoxLayout:
    orientation: 'vertical'
  # orientation: 'horizontal'
# Change the first button so it says "Clear" and the third button so it says "Greet".
# Add a button handler.
# Change button "two" to a text input field.
    Button:
        text: 'Clear'
        on_press: app.handle_clear()
    TextInput:
        id: input_name
        text: ''
    Button:
        text: 'Greet'
        on_press: app.handle_greet()

    # Add a label below the third button with the text "Enter your name":
    # Set the new label's text colour to yellow, by adding the following property details "inside" the label:
    # Change the text of the label.
    Label:
        id: output_label
        text: "Enter your name"
        color: (1, 1, 0, 1)


